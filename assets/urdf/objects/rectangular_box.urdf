<?xml version="1.0"?>
<robot name="object">
  <link name="object">
    <visual>
      <origin xyz="0 0 0"/>
      <geometry>
        <!-- 长方体尺寸: 长(x)=6cm, 宽(y)=4cm, 高(z)=8cm -->
        <box size="0.06 0.04 0.08"/>
      </geometry>
      <material name="orange">
        <color rgba="1.0 0.5 0.2 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0"/>
      <geometry>
        <!-- 碰撞几何与视觉几何相同 -->
        <box size="0.06 0.04 0.08"/>
      </geometry>
    </collision>
    <inertial>
      <!-- 密度: 567 kg/m³ (与原始立方体相同) -->
      <density value="567.0"/>
    </inertial>
  </link>
</robot>
